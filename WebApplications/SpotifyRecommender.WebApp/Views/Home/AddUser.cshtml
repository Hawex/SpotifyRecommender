@model SpotifyRecommender.WebApp.Models.UserModel
@{
    ViewBag.Title = "Login";

}
@{
    @using (Html.BeginForm("AddNewUser", "Home"))
    {
        
        <div style="color:black;">@ViewBag.AddUserMessage</div>
        <div style="color:red;">@Html.ValidationSummary()</div>
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.Login)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.Login, new { @class = "form-control" })</div>
        </div>     
        <br />
        <input type="submit" value="Add" class="btn btn-primary" />
    }

}
